<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unitn.francesco.rendezvous.MainActivity">

    <ImageView
        android:id="@+id/search_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/placeholder"
        style="@style/spacer"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/pers_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/spacer"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/network" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Events" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/spacer"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/worldwide" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commercial Events" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/spacer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My account" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
