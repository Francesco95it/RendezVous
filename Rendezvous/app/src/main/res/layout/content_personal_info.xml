<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unitn.francesco.rendezvous.PersonalInfo"
    tools:showIn="@layout/activity_personal_info">


    <TextView
        android:id="@+id/prof_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="Modify your profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="Modify your profile" />

    <TextView
        android:id="@+id/prof_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Name" />

    <EditText
        android:id="@+id/input_prof_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/prof_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Surname"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Surname" />

    <EditText
        android:id="@+id/input_prof_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/prof_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Birthday"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Birthday" />

    <EditText
        android:id="@+id/input_prof_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/prof_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Living city"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Living position" />

    <EditText
        android:id="@+id/input_prof_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/prof_submit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="0dp"
        android:text="Submit"
        tools:text="Submit" />

</LinearLayout>
